<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/forecast_card_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/forecast_card_padding">

        <TextView
            android:id="@+id/day"
            android:layout_width="@dimen/forecast_card_day_width"
            android:layout_height="wrap_content"
            tools:text="Wed" />

        <TextView
            android:id="@+id/date"
            android:layout_width="@dimen/forecast_card_date_width"
            android:layout_height="wrap_content"
            tools:text="Feb 22" />

        <TextView
            android:id="@+id/temperatureLow"
            android:layout_width="@dimen/forecast_card_temperature_width"
            android:layout_height="wrap_content"
            tools:text="75" />

        <TextView
            android:id="@+id/temperatureHigh"
            android:layout_width="@dimen/forecast_card_temperature_width"
            android:layout_height="wrap_content"
            tools:text="86" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Mostly Cloudy" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
